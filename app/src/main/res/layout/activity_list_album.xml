<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_album"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.feedplanner.activity.ListAlbumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.5dp">

        <Button
            android:id="@+id/btn_imageLocalBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_arrow" />

        <TextView
            android:id="@+id/txt_shareto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/btn_imageLocalBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_imageLocalBack"
            android:gravity="center"
            android:text="Albums"
            android:textColor="@color/pink"
            android:textStyle="bold" />


    </RelativeLayout>

    <ListView
        android:id="@+id/lvAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="3dp"
        android:padding="0dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp" />
</LinearLayout>
