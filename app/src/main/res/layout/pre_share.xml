<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    tools:context="me.feedplanner.activity.MainActivity">

    <Button

        android:background="@drawable/back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_prShareBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<ImageView
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:src="@mipmap/logo"
    android:layout_marginTop="46dp"
    android:id="@+id/imageView"
    android:layout_below="@+id/btn_prShareBack"
    android:layout_centerHorizontal="true" />


    <Button
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btn_toShare"
        android:textColor="#ffffff"
        android:background="@drawable/instaplan_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Share"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <me.feedplanner.widget.ResizableImageViewByWidth
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/txtsharebg"
        android:id="@+id/imageView2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
