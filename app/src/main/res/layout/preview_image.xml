<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="45.5dp">

        <Button

            android:background="@drawable/x_image"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_previewImageBack" />
        <View
            android:layout_below="@+id/txt_shareto"
            android:layout_width="match_parent"
            android:background="@color/pink"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/txt_shareto"
            android:gravity="center"
            android:text="Photo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/pink"
            android:layout_alignTop="@+id/btn_previewImageBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/btn_previewImageBack" />


    </RelativeLayout>
    
    <ImageView
        android:layout_below="@+id/layout_top"
        android:id="@+id/img_photoPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_photoPreview"
        android:id="@+id/btn_cap"
        android:background="@drawable/camera_bright"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:id="@+id/btn_done"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btn_crop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop"
        android:id="@+id/btn_crop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp" />


</RelativeLayout>